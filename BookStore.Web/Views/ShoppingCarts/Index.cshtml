﻿@using BookStore.Domain
﻿@using Microsoft.Extensions.Options
@model BookStore.Domain.DTO.ShoppingCartDto
@inject IOptions<StripeSettings> Stripe

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool cartIsEmpty = Model.Books.Count == 0;
}

<h1>Shopping Cart</h1>

<div class="container">

    @if (Model.TotalPrice != 0)
    {
        <form asp-controller="ShoppingCarts" asp-action="PayOrder" method="post">
            <article>
                <script src="https://checkout.stripe.com/checkout.js"
                        class="stripe-button"
                        data-key="@Stripe.Value.PublishableKey"
                        data-locale="auto"
                        data-description="Bookstore Application Payment"
                        data-amount="@(Model.TotalPrice * 100)"
                        data-label="Pay $@Model.TotalPrice">
                </script>
            </article>
        </form>
    }

    <!--
    <div class="row-4">
        <a asp-controller="ShoppingCarts" asp-action="order" class="btn btn-info @(cartIsEmpty ? "disabled" : "")">Order now</a>
    </div>
    -->

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Book</th>
                    <th scope="col">Author</th>
                    <th scope="col">Publisher</th>
					<th scope="col">Price</th>
					<th scope="col">Quantity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (cartIsEmpty)
                {
                    <tr>
                        <td colspan="5">Shopping Cart is empty.</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Books.Count; i++)
                    {
                        var item = Model.Books[i];

                        <tr>
                            <th scope="row">@(i + 1)</th>
                            <td>@item.Book.Title</td>
                            <td>@item.Book.Author.Name</td>
                            <td>@item.Book.Publisher.Name</td>
							<td>$@item.Book.Price</td>
                            <td>@item.Quantity</td>
                            <td><a asp-controller="ShoppingCarts" asp-action="DeleteFromShoppingCart" asp-route-id="@item.BookId" class="btn btn-danger">Remove From ShoppingCart</a></td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th scope="col">TotalPrice:</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col">$@Model.TotalPrice</th>
                </tr>
            </tfoot>
        </table>
    </div>

</div>