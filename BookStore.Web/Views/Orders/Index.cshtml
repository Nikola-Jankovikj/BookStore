@model List<BookStore.Domain.Domain.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Orders</h1>

<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Order ID
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="5">No orders made.</td>
                </tr>
            }
            else
            {
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            <a asp-controller="Orders" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-success">Create Invoice</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @if (Model.Count() > 0)
    {
        <div class="row">
            <a asp-controller="Order" asp-action="ExportAllOrders" class="btn btn-info">Export Orders</a>
        </div>
    }

</div>
