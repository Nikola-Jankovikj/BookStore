@model BookStore.Domain.DTO.OrderDto

@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ordered on @(Model.OrderDate.Date.ToShortDateString()), @(Model.OrderDate.ToShortTimeString()) </h1>

<div>
	<a asp-action="Index" class="btn rounded-pill buttonBrown shadow m-2">Back to List</a>
</div>

<hr/>

<div class="container rounded-3 bg-light shadow p-4">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Book</th>
                <th scope="col">Author</th>
                <th scope="col">Publisher</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Books.Count; i++)
            {
                var item = Model.Books[i];

                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@item.Book.Title</td>
                    <td>@item.Book.Author.Name</td>
                    <td>@item.Book.Publisher.Name</td>
                    <td>$@item.Book.Price</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
        <tfoot class="thead-dark">
            <tr>
                <th scope="col">Total Price:</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col">$@Model.TotalPrice</th>
            </tr>
        </tfoot>
    </table>
</div>


<style>
    .buttonBrown {
        background-color: #A24B00;
        color: white;
        width: 9rem;
    }

    .buttonBrown:hover {
        background-color: #7B3200;
        color: white;
    }

    .buttonYellow {
        background-color: #E8AD21;
        color: white;
        width: 7rem;
    }

    .buttonYellow:hover {
        background-color: #B97E09;
        color: white;
    }
</style>