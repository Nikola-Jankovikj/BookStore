@model List<BookStore.Domain.Domain.Author>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Authors</h1>

<div class="container">
    <div class="m-3">
        <a class="btn rounded-pill buttonBrown shadow" asp-controller="Authors" asp-action="Create">New Author</a>

    </div>

    @for(int i=0;i<Model.Count; i++)
    {
        var item = Model[i];
        if(i % 4 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 mb-5">

            <div class="card shadow" style="width: 18rem; height: 33rem">
                <img class="card-img-top" src="@item.ImageUrl" style="float: left; height: 25rem; object-fit: cover;" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                </div>
                <div class="card-footer d-flex justify-content-center">
                        <a asp-controller="Authors" asp-action="Details" asp-route-id="@item.Id" class="btn rounded-pill buttonYellow stretched-link">Details</a>
                </div>

            </div>
        </div>

        if(i % 4 == 3)
        {
            @:</div>
        }
    }

</div>


<style>
    .buttonBrown {
        background-color: #A24B00;
        color: white;
        width: 7rem;
    }
    .buttonBrown:hover {
        background-color: #7B3200;
        color: white;
    }
    .buttonYellow {
        background-color: #E8AD21;
        color: white;
        width: 7rem;
    }
    .buttonYellow:hover {
        background-color: #B97E09;
        color: white;
    }
</style>