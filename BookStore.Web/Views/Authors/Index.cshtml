@model List<BookStore.Domain.Domain.Author>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Authors</h1>

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Authors" asp-action="Create">Add new Author</a>

    </div>

    @for(int i=0;i<Model.Count; i++)
    {
        var item = Model[i];
        if(i % 3 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 m-4">

            <div class="card" style="width: 18rem; height: 35rem">
                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                </div>
                <div class="card-footer d-flex justify-content-center">
                        <a asp-controller="Authors" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <!--
                        <a asp-controller="Authors" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-controller="Authors" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        -->
                </div>

            </div>
        </div>

        if(i % 3 == 2)
        {
            @:</div>
        }
    }

</div>
