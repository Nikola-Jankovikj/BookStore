@model BookStore.Domain.Domain.Author

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete Author</h1>

<hr />

<h4>Are you sure you want to delete this author?</h4>

<form asp-action="Delete" class="mt-3">
	<input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger rounded-pill shadow" style="width: 7rem;" />
	<a asp-action="Index" class="btn rounded-pill buttonBrown shadow ms-2">Back to List</a>
</form>

<div class="container d-flex justify-content-center mt-4">
	<div class="card mb-3 w-100 shadow">
		<div class="row g-0">
			<div class="col-md-3">
                <img src="@Model.ImageUrl" class="img-fluid rounded-start" style="float: left; width: 20rem; height: 27rem; object-fit: cover;" alt="Author image">
			</div>
			<div class="col-md-8 p-4">
				<div class="card-body">
					<h3 class="card-title">@Model.Name</h3>
                    <hr/>
					<p class="card-text">@Model.Description</p>
				</div>
			</div>
		</div>
	</div>
</div>



<style>
    .buttonBrown {
        background-color: #A24B00;
        color: white;
        width: 7rem;
    }

        .buttonBrown:hover {
            background-color: #7B3200;
            color: white;
        }

    .buttonYellow {
        background-color: #E8AD21;
        color: white;
        width: 7rem;
    }

        .buttonYellow:hover {
            background-color: #B97E09;
            color: white;
        }
</style>