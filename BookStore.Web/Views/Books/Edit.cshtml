@model BookStore.Domain.Domain.Book

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imageSrc = Model.ImageUrl;
}

<h1>Edit Book</h1>

<div class="m-3">
    <a asp-action="Index" class="btn rounded-pill buttonBrown shadow">Back to List</a>
</div>

<hr />

<div class="row m-3">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-4">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control mt-1" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="AuthorId" class="control-label">Author</label>
                <select asp-for="AuthorId" class="form-control mt-1" asp-items="ViewBag.AuthorId"></select>
            </div>
            <div class="form-group mb-4">
                <label asp-for="PublisherId" class="control-label">Publisher</label>
                <select asp-for="PublisherId" class="form-control mt-1" asp-items="ViewBag.PublisherId"></select>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control mt-1" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ImageUrl" class="control-label">Image Link for Book Cover</label>
                <input asp-for="ImageUrl" class="form-control mt-1" />
				<span asp-validation-for="ImageUrl" class="text-danger"></span>
                <img src="@imageSrc" alt="Book cover" class="mt-3 rounded-3" style="max-width: 18rem; max-height: 35rem">
			</div>
			<div class="form-group mb-4">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" class="form-control mt-1" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
            <div class="form-group mb-4">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control mt-1" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control mt-1" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Save" class="btn rounded-pill buttonBrown shadow" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<style>
    .buttonBrown {
        background-color: #A24B00;
        color: white;
        width: 7rem;
    }

        .buttonBrown:hover {
            background-color: #7B3200;
            color: white;
        }

    .buttonYellow {
        background-color: #E8AD21;
        color: white;
        width: 7rem;
    }

        .buttonYellow:hover {
            background-color: #B97E09;
            color: white;
        }
</style>