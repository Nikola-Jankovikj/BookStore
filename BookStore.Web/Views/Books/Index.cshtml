@model List<BookStore.Domain.Domain.Book>

    @{
    ViewData["Title"] = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Books</h1>

<div class="container">
    <div class="m-3">
        <a class="btn rounded-pill buttonBrown shadow" asp-controller="Books" asp-action="Create">New Book</a>

    </div>

    @for(int i=0;i<Model.Count; i++)
    {
        var item = Model[i];
        if(i % 4 == 0)
        {
            @:<div class="row">
        }
        <div class="col-3 mb-5">

            <div class="card shadow" style="width: 17rem;">
                <a  asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="px-0 py-0 mx-0 my-0 text-dark" style="text-decoration: none;">
                    <img class="card-img-top mb-3" src="@item.ImageUrl" style="float: left; height: 25rem; object-fit: cover;" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Author.Name</p>
                        <h6>$@(item.Price)</h6>
                    </div>
                </a>
                <div class="card-footer d-flex justify-content-around">
                    <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="btn rounded-pill buttonYellow">Details</a>
                    <a asp-controller="Books" asp-action="AddToCart" asp-route-id="@item.Id" class="btn rounded-pill buttonBrown">Add to Cart</a>
                </div>
            </div>
        </div>

        if(i % 4 == 3)
        {
            @:</div>
        }
    }
</div>


<style>
    .buttonBrown {
        background-color: #A24B00;
        color: white;
        width: 7rem;
    }
    .buttonBrown:hover {
        background-color: #7B3200;
        color: white;
    }
    .buttonYellow {
        background-color: #E8AD21;
        color: white;
        width: 7rem;
    }
    .buttonYellow:hover {
        background-color: #B97E09;
        color: white;
    }
</style>
