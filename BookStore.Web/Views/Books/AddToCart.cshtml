@model BookStore.Domain.Domain.ShoppingCartBooks

<h1>Add Book to Shopping Cart</h1>

<div class="m-3">
    <a asp-action="Index" class="btn rounded-pill buttonBrown shadow">Back to List</a>
</div>

<hr />

<div class="row m-3">
    <div class="col-4">
        <form asp-action="AddToCartConfirmed">
            <input type="hidden" asp-for="BookId" />

            <div class="form-group mb-4">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" type="number" value="1" min="1" max="100" class="form-control mt-1 " />
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Add To Cart" class="btn rounded-pill buttonBrown shadow" />
            </div>
        </form>
    </div>
</div>


<style>
    .buttonBrown {
        background-color: #A24B00;
        color: white;
        width: 7rem;
    }

        .buttonBrown:hover {
            background-color: #7B3200;
            color: white;
        }

    .buttonYellow {
        background-color: #E8AD21;
        color: white;
        width: 7rem;
    }

        .buttonYellow:hover {
            background-color: #B97E09;
            color: white;
        }
</style>