@model List<BookStore.Domain.Domain.Publisher>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Publishers</h1>
<div class="m-3">
	<a class="btn rounded-pill buttonBrown shadow" asp-controller="Publishers" asp-action="Create">New Publisher</a>
</div>

<div class="container rounded-3 bg-light shadow p-4">
	
		<table class="table table-hover">
			<thead>
				<tr>
					<th>
						#
					</th>
					<th>
						Publisher name
					</th>
					<th>
						Location
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@for (int i = 0; i < Model.Count(); i++)
				{
					var item = Model[i];
					<tr>
						<td>@(i + 1)</td>
						<td>
							@Html.DisplayFor(modelItem => item.Name)
						</td>

						<td>
							@Html.DisplayFor(modelItem => item.Location)
						</td>
						<td class="d-flex justify-content-end">
							<a asp-controller="Publishers" asp-action="Details" asp-route-id="@item.Id" class="btn rounded-pill buttonYellow me-4">Details</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
   
    
</div>


<style>
    .buttonBrown {
        background-color: #A24B00;
        color: white;
        width: 9rem;
    }

        .buttonBrown:hover {
            background-color: #7B3200;
            color: white;
        }

    .buttonYellow {
        background-color: #E8AD21;
        color: white;
        width: 7rem;
    }

        .buttonYellow:hover {
            background-color: #B97E09;
            color: white;
        }
</style>
