@model BookStore.Domain.Domain.Publisher

@{
    ViewData["Title"] = "Add Publisher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add New Publisher</h1>

<div class="m-3">
    <a asp-action="Index" class="btn rounded-pill buttonBrown shadow">Back to List</a>
</div>

<hr />

<div class="row m-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="Name" class="control-label mt-1"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Location" class="control-label mt-1"></label>
                <textarea asp-for="Location" class="form-control mt-1" rows="5"></textarea>
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Create" class="btn rounded-pill buttonBrown shadow" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


<style>
    .buttonBrown {
        background-color: #A24B00;
        color: white;
        width: 7rem;
    }

        .buttonBrown:hover {
            background-color: #7B3200;
            color: white;
        }

    .buttonYellow {
        background-color: #E8AD21;
        color: white;
        width: 7rem;
    }

        .buttonYellow:hover {
            background-color: #B97E09;
            color: white;
        }
</style>